<Window x:Class="PBaczek_Week13_HW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PBaczek_Week13_HW"
        mc:Ignorable="d"
        Title="DatabaseAssignment" Height="256" Width="266">
    <Grid HorizontalAlignment="Left" Width="256">
        <Button x:Name="Add" Content="Add" HorizontalAlignment="Left" Margin="10,33,0,0" VerticalAlignment="Top" Width="116" Height="23" Click="Add_Click"/>
        <Button x:Name="Remove" Content="Remove" HorizontalAlignment="Left" Margin="130,33,0,0" VerticalAlignment="Top" Width="116" Height="23" RenderTransformOrigin="0.41,0.043" Click="Remove_Click"/>
        <Button x:Name="Print" Content="Print" HorizontalAlignment="Center" Margin="0,61,0,0" VerticalAlignment="Top" Width="236" Height="47" Click="Print_Click"/>
        <TextBox x:Name="UserInput" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="236"/>
        <ListBox x:Name="FruitList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,113,10,10" ScrollViewer.VerticalScrollBarVisibility="Visible"/>

    </Grid>
</Window>
